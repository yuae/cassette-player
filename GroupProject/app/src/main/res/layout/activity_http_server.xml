<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/serverBackground"
    android:orientation="horizontal"
    tools:context=".HttpServer">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="start"
        android:contentDescription="banner"
        app:srcCompat="@drawable/banner" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/tomorrow_regular"
            android:text="HOSTED BY:"
            android:textColor="#f5899b"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="4dp" />

        <TextView
            android:layout_width="320dp"
            android:layout_height="22dp"
            android:layout_margin="5dp"
            android:fontFamily="@font/tomorrow_regular"
            android:gravity="center"
            android:text="QYY INC."
            android:background="@drawable/customborder"
            android:textColor="#f5899b"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="23dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/tomorrow_regular"
            android:text="LOCATION:"
            android:textColor="#f5899b"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="46dp" />

        <ImageView
            android:layout_width="322dp"
            android:layout_height="27dp"
            android:layout_margin="5dp"
            android:contentDescription="Location Code"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/location"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="68dp" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp">

            <ImageView
                android:layout_width="183dp"
                android:layout_height="40dp"
                android:layout_row="0"
                android:layout_column="0"
                app:srcCompat="@drawable/info"
                android:scaleType="fitXY"
                android:contentDescription="Project info code"
                tools:layout_editor_absoluteX="68dp"
                tools:layout_editor_absoluteY="120dp" />


            <TextView
                android:layout_width="182dp"
                android:layout_height="83dp"
                android:layout_row="1"
                android:layout_column="0"
                android:fontFamily="@font/tomorrow_regular"
                android:gravity="bottom|center_horizontal"
                android:text="Black Market"
                android:textColor="#f5899b"
                android:textSize="36sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="68dp"
                tools:layout_editor_absoluteY="162dp" />

            <ImageView
                android:layout_width="144dp"
                android:layout_height="125dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_rowSpan="2"
                app:srcCompat="@drawable/title"
                android:contentDescription="Developer info Code"
                tools:layout_editor_absoluteX="251dp"
                tools:layout_editor_absoluteY="120dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:background="@drawable/customborder"
                android:fontFamily="@font/tomorrow_regular"
                android:gravity="center"
                android:padding="1dp"
                android:text="Event Duration: Expire on tearing up"
                android:textColor="#f5899b"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="68dp"
                tools:layout_editor_absoluteY="245dp" />
        </GridLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp">

            <TextView
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:fontFamily="@font/tomorrow_regular"
                android:gravity="center|top"
                android:text="Terms and Conditions:"
                android:textColor="#f5899b"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="65dp"
                tools:layout_editor_absoluteY="336dp" />

            <TextView
                android:layout_width="117dp"
                android:layout_height="172dp"
                android:layout_row="1"
                android:layout_rowSpan="2"
                android:layout_column="0"
                android:background="@drawable/customborder"
                android:fontFamily="@font/tomorrow_regular"
                android:gravity="center|start"
                android:padding="1dp"
                android:text="-Scan for entry\n-Tear-up for quit\n-Non-Refundable\n"
                android:textColor="#f5899b"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="65dp"
                tools:layout_editor_absoluteY="358dp" />

            <ImageView
                android:id="@+id/qr"
                android:layout_width="200dp"
                android:layout_height="185dp"
                android:contentDescription="@string/msg"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_rowSpan="2"
                tools:layout_editor_absoluteX="190dp"
                tools:layout_editor_absoluteY="336dp" />

            <TextView
                android:id="@+id/infoip"
                android:layout_width="200dp"
                android:layout_height="47dp"
                android:layout_row="2"
                android:layout_column="1"
                android:fontFamily="@font/tomorrow_regular"
                android:gravity="center_horizontal|top"
                android:text="@string/ip"
                android:textColor="#93366f"
                tools:layout_editor_absoluteX="190dp"
                tools:layout_editor_absoluteY="521dp" />
        </GridLayout>

        <TextView
            android:layout_width="303dp"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/tomorrow_regular"
            android:gravity="center"
            android:text="QYY INC. reserves the right to final interpretation"
            android:textColor="#93366f"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="688dp" />
    </LinearLayout>

</LinearLayout>