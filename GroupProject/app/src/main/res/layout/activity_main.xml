    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:context=".MainActivity"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/base">
    <ImageButton
        android:id="@+id/black_market"
        android:layout_width="70dp"
        android:layout_height="72dp"
        android:adjustViewBounds="true"
        android:background="@drawable/buttonshape"
        android:rotation="90"
        android:layout_gravity="end"
        android:scaleType="centerInside"
        android:src="@drawable/blackmarket"
        android:onClick="QRPage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.006" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Song Title"
        android:rotation="90"
        android:layout_gravity="center|right"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/c2"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">

            <ImageButton
                android:id="@+id/next_track_id"
                android:layout_width="67dp"
                android:layout_height="85dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="true"
                android:onClick="lastClick"
                android:background="@null"
                android:gravity="center|top"
                android:scaleType="centerInside"
                android:src="@drawable/scroll"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.554"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.734" />

            <ImageButton
                android:layout_width="72dp"
                android:layout_height="169dp"
                android:layout_marginLeft="20dp"
                android:onClick="pause_play"
                android:background="@drawable/play_pause" />
            <ImageButton
                android:id="@+id/last_track_id"
                android:layout_width="67dp"
                android:layout_height="85dp"
                android:layout_marginLeft="22dp"
                android:onClick="next_click"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:gravity="bottom"
                android:scaleType="centerInside"
                android:src="@drawable/scroll"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.554"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.734" />
    </LinearLayout>

    </FrameLayout>





